<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="categoryMapper">
  <select id="select">
    SELECT
      idx
      ,name
      ,depth
    FROM category
    <where>
      <if test="depth != null and depth != ''">
        AND depth = #{depth}
      </if>
    </where>
  </select>

</mapper>