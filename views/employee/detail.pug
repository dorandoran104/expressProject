extends ../include/header

block content
  h1= title
  p Welcome to employee
  table 
    tr 
      th 이름
      td=result.name
    tr
      th 휴대폰번호
      td=result.mobile_number
    tr 
      th 입사일
      td 
        input.date_input(type="text", name="start_date", value=result.start_date)
    tr 
      th 퇴사일
      td 
        input.date_input(type="text", name="end_date", value=result.end_date)
  button.save_btn 저장
  button(onclick="history.back()") 뒤로가기
  script(src="/javascripts/employee/detail.js") 
block footer
